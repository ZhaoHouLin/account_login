<form method="POST" action="/">
  <div class="card">
    <h1>Account Login</h1>
    <i class="fas fa-user"><input type="text" name="email"></i>
    <i class="fas fa-key"><input type="password" name="password" {{#if option.remberPwd}} value={{option.password}}
        {{/if}}></i>
    <span>{{#if verifyResults}}帳號或密碼錯誤{{/if}}</span>
    <label for="">
      <input type="checkbox" name="remberPwd" id="engineer" {{#if option.remberPwd}} checked {{/if}}> 記住密碼
    </label>
    <button type="submit">Sign in</button>
  </div>
</form>

