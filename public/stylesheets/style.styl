$color_water_blue = #59c2ff
$color_blue = #00a1ff

flexCenter(j = center,a = j,dir = row)
  display flex
  flex-direction dir
  justify-content j
  align-items a

size(w=100%,h=w)
  width w
  height h

bgSet(url)
  background url
  background-repeat no-repeat
  background-size contain
  background-position center

*
  font-family Microsoft JhengHei
  padding 0
  margin 0
  transition  0.5s
  
html,body
  width 100%
  height 100%
  overflow hidden
  flexCenter()
  color white
  background-color $color_blue

form
  size(,h=500px)
  flexCenter(,,dir=column)

.card
  z-index 2
  border-radius 16px
  box-shadow 2px 2px 4px rgba(0,0,0,0.5)
  size(300px,300px)
  flexCenter(,,column)
  background-color $color_water_blue
  margin 32px
  i
    margin 16px 16px 2px 16px
  input
    margin-left 12px
  label
    margin-top 12px
  span
    margin 8px
    height 8px
    color red
    font-size 8px
button
  size(200px,40px)
  margin-top 16px
  padding 8px
  font-weight 700
  border none
  background-color $color_blue
  color white
  border-radius 16px
  font-size 16px
  cursor pointer
  &:hover
    background-color white
    color $color_blue

  
.circleL
  position absolute
  size(100vh)
  border 4px solid white
  border-radius 50%
  background-color transparent
  left -50%
  animation: lToR 5s infinite alternate
.circleR
  position absolute
  size(100vh)
  border-radius 50%
  background-color #eee
  right -50%
  animation: rToL 5s infinite alternate
  
@keyframes lToR 
  0%
    left -100%
  100%
    left 100%
      
@keyframes rToL 
  0%
    right -100%
  100%
    right 100%